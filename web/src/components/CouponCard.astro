---
import type { Coupon } from "../utils/types"

const { id, name, startDate, endDate, code, imgUrl }: Coupon = Astro.props as Coupon
---

<article
	class="bg-greyBlue w-full flex flex-col justify-between items-center px-5 pb-6 gap-5 pt-4 border border-blueStroke rounded-xl"
>
	<div class="max-w-[20rem] w-full">
		<img src={imgUrl} alt={name} />
	</div>

	<h1 class="text-xl font-bold text-center">{name}</h1>

	<button
		class="bg-ctaGreen border border-greenStroke rounded-xl mt-3 p-3 w-full tex-xl font-semibold flex justify-center items-center gap-2"
	>
		<iconify-icon icon="material-symbols:qr-code-rounded" class="text-2xl"></iconify-icon>
		<p>Visa QR</p>
	</button>
</article>

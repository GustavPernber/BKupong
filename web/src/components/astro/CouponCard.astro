---
import type { Coupon } from "../../types/types"
import ModalButton from "../svelte/ModalButton.svelte"

const { id, name, startDate, endDate, code, imgUrl }: Coupon = Astro.props as Coupon
---

<article
	class="flex flex-col items-center justify-between w-full px-5 pt-4 pb-6 border bg-greyBlue border-blueStroke rounded-xl"
>
	<span class="w-full text-xs text-right text-gray-400">{code}</span>

	<div class="max-w-[20rem] w-full">
		<img src={imgUrl} alt={name} />
	</div>

	<h1 class="mt-3 text-xl font-bold text-center">{name}</h1>
	<ModalButton code={code} name={name} client:idle />
</article>
